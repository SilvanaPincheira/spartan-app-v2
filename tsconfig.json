{
  "compilerOptions": {
    /* ======== üîß CONFIGURACI√ìN BASE ======== */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "incremental": true,
    "downlevelIteration": true,
    "noEmit": true,

    /* ======== ‚öôÔ∏è TYPE CHECKING ======== */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    /* ======== üß≠ ALIAS GLOBAL ======== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },

    /* ======== üß© PLUGINS ======== */
    "plugins": [
      { "name": "next" }
    ]
  },

  /* ======== üìÅ INCLUDES / EXCLUDES ======== */
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
